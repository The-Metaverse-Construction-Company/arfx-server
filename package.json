{
  "name": "@arwall-arfx/server",
  "version": "0.0.1",
  "main": "src/index.js",
  "private": false,
  "engines": {
    "node": ">=12",
    "yarn": "*"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2-dev start ./dist/server.js",
    "dev": "nodemon -L ./dist/server.js",
    "dev:watch": "tsc -w",
    "build": "tsc -p .",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exit dist/api/tests/integration/index.test.js",
    "test:watch": "cross-env NODE_ENV=test mocha --watch dist/api/tests/unit/**/*.test.js",
    "postpublish": "git push --tags",
    "postdocs": "open-cli docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:build": "(cd ../composer && sudo docker-compose up -d --build backend)",
    "docker:deploy": "sudo sh ./deploy.sh",
    "docker:build:deploy": "npm run docker:build && npm run docker:deploy",
    "docker:test:build:deploy": "npm run docker:test:integration && npm run docker:build && npm run docker:deploy",
    "docker:dev": "sudo docker exec $(sudo docker ps -a -q -f name=^backend-service$) npm run dev:watch",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:test:integration": "sudo docker exec $(sudo docker ps -a -q -f name=^backend-service$) npm run test:integration",
    "docker:test:unit": "sudo docker exec $(sudo docker ps -a -q -f name=^backend-service$) npm run test:watch"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.4.1",
    "@sendgrid/mail": "^7.4.2",
    "axios": "^0.19.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "busboy": "^0.3.1",
    "compression": "^1.6.2",
    "connect-busboy": "0.0.2",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.3",
    "cross-env": "^6.0.3",
    "crypto-js": "^4.0.0",
    "dotenv-safe": "^6.0.0",
    "email-templates": "^6.0.3",
    "express": "^4.15.2",
    "express-fingerprint": "^1.2.2",
    "express-validator": "^6.9.2",
    "hbs": "^4.1.1",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-simple": "^0.5.6",
    "md5": "^2.3.0",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.13",
    "mongoose": "^5.2.17",
    "morgan": "^1.8.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-azure-ad": "^4.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pm2": "^4.5.4",
    "random-number": "0.0.9",
